<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_root_first"
    app:startDestination="@+id/fragmentFirst1">

    <fragment
        android:id="@+id/fragmentFirst1"
        android:name="com.zhuinden.jetpacknavbottomnavfragmentexample.features.root.first.First1Fragment" />

    <fragment
        android:id="@+id/fragmentFirst2"
        android:name="com.zhuinden.jetpacknavbottomnavfragmentexample.features.root.first.First2Fragment" />

    <action android:id="@+id/first1_to_first2"
        app:enterAnim="@anim/slide_in_from_right"
        app:exitAnim="@anim/slide_out_to_left"
        app:popEnterAnim="@anim/slide_in_from_left"
        app:popExitAnim="@anim/slide_out_to_right"
        app:destination="@+id/fragmentFirst2"/>

</navigation>